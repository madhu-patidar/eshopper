<div class="modal-dialog">
  <!-- Modal content-->
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">&times;</button>
      <h4 class="modal-title"> Address</h4>
    </div>
    <div class="modal-body">
      <%= form_for @address do |f|%>
        <div class="row">

          <div class="col-sm-6 col-sm-offset-3 billing-form">
            <%= f.text_field "name", placeholder: "Name *", required: "required"%>
            <%= f.text_field "address_1",  placeholder: "Address 1 *", required: "required", maxlength: '100'%>
            <%= f.text_field "address_2",  placeholder: "Address 2"%>
            <%= f.text_field "city", placeholder: "city *", required: "required"%>
            <%= f.text_field "zipcode", placeholder: "Zip / Postal Code *", required: "required"%>
            <%= f.select :country, CountryStateSelect::countries_collection, {}, id: 'country_id', required: "required" %>
             <% state = ["Andaman and Nicobar Islands","Andhra Pradesh","Arunachal Pradesh","Assam","Bihar","Chandigarh","Chhattisgarh","Dadra and Nagar Haveli","Daman and Diu","Delhi","Goa","Gujarat","Haryana","Himachal Pradesh","Jammu and Kashmir","Jharkhand","Karnataka","Kerala","Lakshadweep","Madhya Pradesh","Maharashtra","Manipur","Meghalaya","Mizoram","Nagaland","Orissa","Pondicherry","Punjab","Rajasthan","Sikkim","Tamil Nadu","Tripura","Uttaranchal","Uttar Pradesh","West Bengal"] %>
        <%= f.select(:state, state, {include_blank: "-- State / Province / Region --"}, id: "state", required: "required") %>
            <%= f.text_field "mobile_number", placeholder: "Mobile Phone",  pattern:"[7-9][0-9]{9}", title: "Phone number start with 7-9 and remaing 9 digit with 0-9"%>
            <%= f.hidden_field "customer_id", value: "#{current_customer.id}"%>
          </div>
      
          <div class="col-sm-3 col-sm-offset-4 form-one">
            <%= f.button "Submit" %>
          </div>

        </div>
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
