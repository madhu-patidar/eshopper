              <%= image_tag(@product.pictures.first.image.url, id: "original-image") %>
            </div>
            <% if @product.pictures.count > 1%>
              <div id="similar-product" class="carousel slide" data-ride="carousel"><!-- Wrapper for slides -->
                <div class="carousel-inner">
                  <% @product.pictures.each_slice(3).with_index do |images,index| %> 
                    <div class="<%=index == 0 ? 'item active' : 'item'%>" >
                      <% images.each do |picture| %>
                        <%= image_tag(picture.image.url, onclick: "show_image('#{picture.image.url}')", size:"90x90") %>
                     <% end %>
                    </div>
                  <% end %>
                  
                </div><!-- Controls -->
                <%if @product.pictures.count > 4%>
                  <a class="left item-control" href="#similar-product" data-slide="prev">
                  <i class="fa fa-angle-left"></i>
                  </a>
                  <a class="right item-control" href="#similar-product" data-slide="next">
                  <i class="fa fa-angle-right"></i>
                  </a>
                <% end %>
              </div>
            <% end %>
          </div>
