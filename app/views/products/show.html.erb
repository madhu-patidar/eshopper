                <p>
                <span id= "item<%= @product.id%>">
                  <span >&#8377;<%= @product.price %> </span>
                    <span class="product-information1"><% if customer_signed_in? %>
                      <% if current_customer.cart_items.pluck(:product_id ).include?(@product.id) %>
                        <%= link_to(cart_items_path, class: "btn btn-default") do %>
                          <i class="fa fa-shopping-cart"></i> Go to Cart
                        <% end -%>
                      <% else %>
                        <%= link_to(cart_items_path(product_id: @product.id), :method => :post, class: "btn btn-default") do %>
                          <i class="fa fa-shopping-cart"></i>Add to cart
                        <% end -%>
                      <% end %>
                    <% else %> 
                      <%= link_to(cart_items_path(product_id: @product.id),:method => :post,  class: "btn btn-default ") do %>
                        <i class="fa fa-shopping-cart"></i>
                        Add to cart
                      <% end %>
                    <%end%>
                  </span>
                </span>
              <p><b>Availability:</b><% if @product.quantity > 0 %>
               In Stock <% else %> Out Of Stock<% end %> </p>
              <p><b>Condition:</b> New</p>
              <p><b>Brand:</b> <%= @product.brand.name.upcase %></p>
             <p><%= social_share_button_tag(@product.name, :url => "http://madhu-eshopper.herokuapp.com/products/#{@product.id}") %></p>
