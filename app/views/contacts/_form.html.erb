<%= form_for(@contact) do |f| %>
  <div class="form-group col-md-6">
      <%= f.text_field "name", class: "form-control", required: "required", placeholder: "Name" %>
  </div>
  <div class="form-group col-md-6">
      <%= f.text_field "email", class: "form-control", required: "required", placeholder: "Email" %>
  </div>
  <div class="form-group col-md-12">
      <%= f.text_field "subject", class: "form-control", required: "required", placeholder: "Subject" %>
  </div>
  <div class="form-group col-md-12">
      <%= f.text_area "message", id: "message", required: "required", class: "form-control", rows: "8", placeholder: "Your Message Here" %>
  </div>                        
  <div class="form-group col-md-12">
      <%= f.submit "submit", class: "btn btn-primary pull-right", value: "Submit" %>
  </div>
<% end %>
